<div class="add-item-button-container">
  <button id="add-item-button">+</button>
</div>

<div id="modal-backdrop" class="hidden"></div>
<div id="add-item-modal" class="hidden">
  <div class="modal-dialog">

    <div class="modal-header">
      <h3>Add a ToDo</h3>
      <button type="button" class="modal-close-button">&times;</button>
    </div>

    <div class="modal-body">
      <div class="input-element required">
        <label for="input-name">Name</label>
        <input type="text" id="input-name">
      </div>
      <div class="input-element">
        <label for="input-price">Price</label>
        <input type="text" id="input-price">
      </div>
      <div class="input-element">
        <label for="input-description">Description</label>
        <textarea id="input-description"></textarea>
      </div>
    </div>

    <div class="modal-footer">
      <button type="button" class="modal-cancel-button">Cancel</button>
      <button type="button" class="modal-accept-button">Add ToDo</button>
    </div>

  </div>
</div>

